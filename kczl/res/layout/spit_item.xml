<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="8dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_normal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dip" >

                <FrameLayout
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginRight="5dip" >

                    <ImageView
                        android:id="@+id/face"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/face_1" >
                    </ImageView>

                    <TextView
                        android:id="@+id/month_tv"
                        android:layout_width="21dip"
                        android:layout_height="21dip"
                        android:layout_marginLeft="9dip"
                        android:layout_marginTop="9dip"
                        android:gravity="center"
                        android:text="5月"
                        android:textColor="@color/white"
                        android:textSize="12sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/day_tv"
                        android:layout_width="21dip"
                        android:layout_height="21dip"
                        android:layout_marginLeft="30dip"
                        android:layout_marginTop="30dip"
                        android:gravity="center"
                        android:text="20日"
                        android:textColor="@color/white"
                        android:textSize="10sp" >
                    </TextView>
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip" >

                    <TextView
                        android:id="@+id/coursename_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:text="计算机组成原理"
                        android:textColor="@color/black"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/coursetime_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/coursename_TextView"
                        android:layout_marginLeft="3dip"
                        android:layout_marginTop="2dip"
                        android:text="第1周 星期五"
                        android:textColor="@color/gray"
                        android:textSize="12sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/teacher_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/coursename_TextView"
                        android:layout_marginLeft="12dip"
                        android:layout_marginTop="2dip"
                        android:layout_toRightOf="@+id/coursetime_TextView"
                        android:text="靡元根"
                        android:textColor="@color/gray"
                        android:textSize="12sp" >
                    </TextView>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/content_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="概念准确，重点突出；内容丰富，信息量较大；介绍学科前沿；分析问题透彻，逻辑性强；理论联系实际，实力恰当；注意讲讲思考问题的方法，启发学生思考；课时分配适中，能按时完成讲授任务"
                android:textColor="@color/black"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/spittime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:drawableLeft="@drawable/clock"
                android:gravity="center"
                android:text="发布于 5分钟前"
                android:textColor="@color/gray"
                android:textSize="13sp" >
            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#EAEAEA" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/spit_like_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/layout_bg"
                android:gravity="center_horizontal"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_centerVertical="true"
                    android:src="@drawable/thumb" >
                </ImageView>

                <TextView
                    android:id="@+id/thumb_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dip"
                    android:layout_toRightOf="@+id/thumb"
                    android:text="@string/Like"
                    android:textColor="@color/gray"
                    android:textSize="12sp" >
                </TextView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="#EAEAEA" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/spit_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/layout_bg"
                android:gravity="center_horizontal"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:layout_centerVertical="true"
                    android:src="@drawable/comment" >
                </ImageView>

                <TextView
                    android:id="@+id/comment_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dip"
                    android:layout_toRightOf="@+id/comment"
                    android:text="评论 (18)"
                    android:textColor="@color/gray"
                    android:textSize="12sp" >
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>