<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commentblock"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/upper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dip" >

                <RelativeLayout
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginRight="5dip" >

                    <ImageView
                        android:id="@+id/face"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/face_1" >
                    </ImageView>

                    <TextView
                        android:id="@+id/month_tv"
                        android:layout_width="21dip"
                        android:layout_height="21dip"
                        android:layout_marginLeft="9dip"
                        android:layout_marginTop="9dip"
                        android:gravity="center"
                        android:text="5月"
                        android:textColor="@color/white"
                        android:textSize="12sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/day_tv"
                        android:layout_width="21dip"
                        android:layout_height="21dip"
                        android:layout_marginLeft="30dip"
                        android:layout_marginTop="30dip"
                        android:gravity="center"
                        android:text="20日"
                        android:textColor="@color/white"
                        android:textSize="10sp" >
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip" >

                    <TextView
                        android:id="@+id/coursename_TextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:text="计算机组成原理"
                        android:textColor="@color/black"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/time_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/coursename_TextView1"
                        android:layout_marginLeft="3dip"
                        android:layout_marginTop="2dip"
                        android:text="第一周 星期五"
                        android:textColor="@color/gray"
                        android:textSize="12sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/teacher_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/coursename_TextView1"
                        android:layout_marginLeft="12dip"
                        android:layout_marginTop="2dip"
                        android:layout_toRightOf="@+id/time_TextView"
                        android:text="靡元根"
                        android:textColor="@color/gray"
                        android:textSize="12sp" >
                    </TextView>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/content_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="概念准确，重点突出；内容丰富，信息量较大；"
                android:textColor="@color/black"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="0条评论"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/spittime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:drawableLeft="@drawable/clock"
                android:gravity="center"
                android:text="发布于 5分钟前"
                android:textColor="@color/gray"
                android:textSize="13sp" >
            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#f3f3f3" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/spit_like_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/layout_bg"
                android:gravity="center_horizontal"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_centerVertical="true"
                    android:src="@drawable/thumb" >
                </ImageView>

                <TextView
                    android:id="@+id/thumb_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dip"
                    android:layout_toRightOf="@+id/thumb"
                    android:text="(1)"
                    android:textColor="@color/gray"
                    android:textSize="12sp" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/spit_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/layout_bg"
                android:gravity="center_horizontal"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:layout_centerVertical="true"
                    android:src="@drawable/comment" >
                </ImageView>

                <TextView
                    android:id="@+id/comment_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dip"
                    android:layout_toRightOf="@+id/comment"
                    android:text="评论"
                    android:textColor="@color/gray"
                    android:textSize="12sp" >
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#f3f3f3" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="@string/nocomment"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>