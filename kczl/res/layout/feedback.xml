<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#F0F0F0">


	<LinearLayout android:layout_height="@dimen/navbar_height"
		android:layout_width="match_parent" android:id="@+id/linearLayout1"
		android:orientation="horizontal" android:background="@color/toolbar">
		<Button android:layout_gravity="center_vertical"
			android:layout_weight="0" android:layout_marginLeft="11dip"
			android:textSize="12sp" android:background="@drawable/cancel_bg"
			android:id="@+id/abort_button"
			android:textColor="@drawable/white" android:layout_height="28dip"
			android:layout_width="42dip"></Button>
		<TextView android:layout_gravity="center_vertical"
			android:gravity="center" android:text="@string/feedback1" android:id="@+id/textView1"
			android:layout_weight="1" android:textSize="18sp" android:textColor="@drawable/white"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

		<Button android:layout_gravity="center_vertical"
			android:textSize="12sp" android:layout_weight="0"
			android:layout_marginRight="11dip"
			android:textColor="@drawable/white" android:layout_width="42dip"
			android:background="@drawable/confirm_bg" android:id="@+id/submit_button"
			android:layout_height="28dip"></Button>
	</LinearLayout>

	<EditText android:layout_height="match_parent" android:hint="@string/feedback_notice"
		android:textColor="@color/black" android:gravity="top"
		android:layout_marginTop="15dip" android:id="@+id/feedback_notice_EditText"
		android:background="@drawable/textfield_edit_pic" android:textSize="16sp"
		android:textColorHint="@color/lightgray" android:layout_gravity="center_horizontal"
		android:layout_width="match_parent"
		android:layout_margin="20dip"></EditText>


</LinearLayout>
